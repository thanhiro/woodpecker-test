{
  "name": "foobar-api",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/foobar-api/src",
  "projectType": "application",
  "targets": {
    "build:swc": {
      "executor": "@nx/js:swc",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/apps/foobar-api",
        "format": "esm",
        "sourcemap": true,
        "main": "apps/foobar-api/src/main.ts",
        "tsConfig": "apps/foobar-api/tsconfig.app.json",
        "assets": ["apps/foobar-api/*.md"],
        "stripLeadingPaths": true
      }
    },
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "platform": "node",
        "outputPath": "dist/apps/foobar-api",
        "format": ["esm"],
        "bundle": true,
        "main": "apps/foobar-api/src/main.ts",
        "tsConfig": "apps/foobar-api/tsconfig.app.json",
        "assets": ["apps/foobar-api/src/assets"],
        "generatePackageJson": true,
        "esbuildOptions": {
          "sourcemap": true,
          "outExtension": {
            ".js": ".js"
          }
        }
      },
      "configurations": {
        "development": {},
        "production": {
          "esbuildOptions": {
            "sourcemap": false,
            "outExtension": {
              ".js": ".js"
            }
          }
        }
      }
    },
    "prune-lockfile": {
      "dependsOn": ["build"],
      "cache": true,
      "executor": "@nx/js:prune-lockfile",
      "outputs": [
        "{workspaceRoot}/dist/apps/foobar-api/package.json",
        "{workspaceRoot}/dist/apps/foobar-api/pnpm-lock.yaml"
      ],
      "options": {
        "buildTarget": "build"
      }
    },
    "copy-workspace-modules": {
      "dependsOn": ["build"],
      "cache": true,
      "outputs": ["{workspaceRoot}/dist/apps/foobar-api/workspace_modules"],
      "executor": "@nx/js:copy-workspace-modules",
      "options": {
        "buildTarget": "build"
      }
    },
    "prune": {
      "dependsOn": ["prune-lockfile", "copy-workspace-modules"],
      "executor": "nx:noop"
    },
    "noop": {
      "executor": "nx:run-commands",
      "options": {
        "command": "echo 'noop build'"
      }
    },
    "dev": {
      "continuous": true,
      "executor": "@nx/js:node",
      "dependsOn": ["build"],
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "foobar-api:build"
      },
      "configurations": {
        "development": {},
        "production": {}
      }
    },
    "start": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node dist/apps/foobar-api/src/main.js"
      }
    },
    "docker:build": {
      "executor": "@nx/docker:build",
      "options": {
        "dockerfile": "apps/foobar-api/Dockerfile",
        "context": ".",
        "tags": ["foobar-api:latest", "foobar-api:${BUILD_TAG}"]
      }
    },
    "docker:run": {
      "executor": "@nx/docker:run",
      "options": {
        "image": "foobar-api:latest",
        "ports": ["3000:3000"]
      }
    }
  },
  "tags": []
}
